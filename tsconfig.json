{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es2019",
    "lib": [
      "es2019",
      "dom"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "baseUrl": "src",
    "paths": {
      "@assets/*": [
        "../assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@appState": [
        "appState.tsx"
      ]
    }
  },
  "include": [
    "./src/"
  ],
  "typeRoots": [
    "./node_modules/@types/",
    "./node_modules/@axa-ch/bifrost-types/lib/"
  ]
}
